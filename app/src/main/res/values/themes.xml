<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ButtonDP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.AppTheme.CustomizableGenericButton" parent="">
        <item name="button_title_text_size">36sp</item>
        <item name="button_subtitle_text_size">18sp</item>
        <item name="button_title_text_color">@color/black</item>
        <item name="button_subtitle_text_color">@color/black</item>
        <item name="button_background_tint">@color/buttondp_style_normal</item>
        <item name="android:minWidth">@dimen/_80sdp</item>
    </style>

    <style name="Widget.AppTheme.CustomizableGenericButton.Outlined" parent="Widget.AppTheme.CustomizableGenericButton">
        <item name="button_style">outlined</item>
        <item name="button_background_tint">@color/buttondp_style_outlined</item>
        <item name="button_title_text_color">@color/buttondp_style_outlined</item>
        <item name="button_subtitle_text_color">@color/buttondp_style_outlined</item>
    </style>

    <style name="Widget.AppTheme.CustomizableGenericButton.Gradient" parent="Widget.AppTheme.CustomizableGenericButton">
        <item name="button_style">gradient</item>
        <item name="button_gradient_start_tint">@color/buttondp_style_gradient_start</item>
        <item name="button_gradient_end_tint">@color/buttondp_style_gradient_end</item>
    </style>


</resources>